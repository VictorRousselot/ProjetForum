<?xml version="1.0" encoding="UTF-8"?>

<web-app

  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">

    <servlet>
        <servlet-name>CreationUtilisateur</servlet-name>
        <servlet-class>servlets.CreationUtilisateur</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreationUtilisateur</servlet-name>
        <url-pattern>/creationUtilisateur</url-pattern>
    </servlet-mapping>

<servlet>
<servlet-name>CreerSujet</servlet-name>
<servlet-class>servlets.CreerSujet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>CreerSujet</servlet-name>
<url-pattern>/creationSujet</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Inscription</servlet-name>
<servlet-class>servlets.Inscription</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>Inscription</servlet-name>
<url-pattern>/inscription</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>GestionTestJDBC</servlet-name>
<servlet-class>servlets.GestionTestJDBC</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>GestionTestJDBC</servlet-name>
<url-pattern>/testjdbc</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>Connexion</servlet-name>
	<servlet-class>servlets.Connexion</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Connexion</servlet-name>
	<url-pattern>/connexion</url-pattern>
</servlet-mapping>

<listener>
<listener-class>config.InitialisationDaoFactory</listener-class>
</listener>

</web-app>