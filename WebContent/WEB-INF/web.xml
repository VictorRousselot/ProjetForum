<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Salon</servlet-name>
    <servlet-class>servlets.Salon</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Salon</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Sujet</servlet-name>
  	<servlet-class>servlets.Sujet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Sujet</servlet-name>
  	<url-pattern>/sujet</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>GestionTestJDBC</servlet-name>
	<servlet-class>servlets.GestionTestJDBC</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>GestionTestJDBC</servlet-name>
	<url-pattern>/testjdbc</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>config.InitialisationDaoFactory</listener-class>
</listener>
</web-app>